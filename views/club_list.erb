<h2>Club List</h2>

<div class="account-div">
    <aside class="account-menu-aside">
        <p><a href="/books/want">Want to Read</a></p>
        <p><a href="/books/current">Currently Reading</a></p>
        <p><a href="/books/finished">Books you've read</a></p>
        <p><a href="/books/club">Clubs</a></p>
        <p><a href="/books/club/help">How to use clubs</a></p>
        <p><a href="/books/myaccount">My Account</a></p>
    </aside>


<main class="account-main">

    <form class="new-club-form" action="/books/club/new" method="post">
        <input type="hidden" name="_method" value="put">
        <input type="text" name="club_name" placeholder="Create a new bookclub">
        <button>
            Create
        </button>
    </form>

<%# Add in link for club page %>
<%# Add admin notification %>
<%# If admin add delete %>
<%# Add count member user %>
    <ol>
        <% club_list.each do |club|%>
            <li class="club-list-div">
                <a href="/books/club_details/<%= club["club_id"].to_i %>">
                    <p><%= club["club_name"] %></p>
                </a>
                <%if admin?(club["club_id"].to_i)%>
                    <p class="admin-text-detail">You are admin if this club</p>
                    <form class="delete-club-form" action="/books/club/delete/<%= club["club_id"].to_i %>" method="post">
                        <input type="hidden" name="_method" value="delete">
                        <button>Delete</button>
                    </form>
                <%else%>
                    <p class="admin-text-detail">Someone else is admin of this club</p>
                <%end%>
            </li>
        <% end %>
    </ol>

</main>

</div>